@model ProjectHouse.Models.Learning.HomeWork
@using ProjectHouse.Models.Learning
@{
    var groupes = ViewBag.Groupes as IEnumerable<SelectListItem>;
}

@using (Html.BeginForm())
{
    <div>
        @Html.LabelFor(l => l.Title)
        @Html.EditorFor(l => l.Title)
    </div>
    <div>
        @if (Model == null)
        {
            <label>Groupe status: Not Started</label>
        }
        else
        {
            <label asp-for="Status">Groupe status: </label>
            <select asp-for="Status" asp-items="Html.GetEnumSelectList<HomeWorkStatus>()"></select>
        }

    </div>
    <div>
        @Html.HiddenFor(l => l.Date)
    </div>
    <div>
        @Html.LabelFor(p => p.Position)
        @Html.EditorFor(p => p.Position)
    </div>
    <div>
        <textarea id="TextArea" asp-for="Text" cols="100" rows="10"></textarea>
    </div>
    <div>
        <label asp-for="GroupeId">Groupe ID: </label>
        <select asp-for="GroupeId" asp-items="groupes"></select>
    </div>
    <div>
        <input type="submit" value="@(Model != null ? "Save" : "Add")" />
    </div>
}

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>
<script type="text/javascript">$(document).ready(function() {$('#TextArea').summernote({height: 300});});</script>