<script src="https://cdn.jsdelivr.net/npm/summernote@0.8.18/dist/summernote.min.js"></script>


<script type="text/javascript">$(document).ready(function() {$('#Description').summernote({height: 300});});</script>
<script type="text/javascript">$(document).ready(function() {$('#Text').summernote({height: 300});});</script>