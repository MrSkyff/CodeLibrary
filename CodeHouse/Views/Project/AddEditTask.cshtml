@model ProjectHouse.Models.Project.Task
@using ProjectHouse.Models.Project

<form method="post">
    <div class="form-group">
        <label for="formGroupExampleInput" asp-for="Name"></label>
        <input class="form-control" id="formGroupExampleInput" placeholder="Example input" type="text" asp-for="Name" />
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Description</label>
        <textarea class="form-control" id="Description" rows="8" asp-for="Description"></textarea>
    </div>

    <div class="form-group">
        <label for="exampleFormControlTextarea1">Text</label>
        <textarea class="form-control" id="Text" rows="8" asp-for="Text"></textarea>
    </div>

    <div class="form-group">
        <label for="formGroupExampleInput" asp-for="Position"></label>
        <input class="form-control" id="formGroupExampleInput" placeholder="Example input" type="number" asp-for="Position" />
    </div>

    <div class="col-sm-12 col-xl-4 mb-30">
        <label for="example-datepicker" asp-for="DeadLine"></label><input class="form-control" type="datetime-local" asp-for="DeadLine" />
    </div>


    <div class="col-sm-10">
        <div class="form-check">
            <input class="form-check-input" type="checkbox" id="gridCheck1" type="checkbox" asp-for="Global" />
            <label class="form-check-label" for="gridCheck1">
                Is global?
            </label>
        </div>
    </div>

    <div>
        <label for="exampleFormControlInput1" asp-for="TypeOfTask">Status: </label>
        <select class="form-control form-control-lg" asp-for="TypeOfTask" asp-items="Html.GetEnumSelectList<ProjectHouse.Models.Project.TypeOfTask>()">
        </select>
    </div>

    <div>
        <label for="exampleFormControlInput1" asp-for="TaskStatus">Status: </label>
        <select class="form-control form-control-lg" asp-for="TaskStatus" asp-items="Html.GetEnumSelectList<ProjectHouse.Models.Project.TaskStatus>()"></select>
    </div>
    <div>
        <label for="exampleFormControlInput1" asp-for="TaskImportance">Importance: </label>
        <select class="form-control form-control-lg" asp-for="TaskImportance" asp-items="Html.GetEnumSelectList<TaskImportance>()"></select>
    </div>

    <div>
        <input type="hidden" asp-for="ProjectId" />
        <input type="hidden" asp-for="CategoryId" />
        <input type="hidden" asp-for="Date" />
    </div>

    <input type="submit" value="@(Model.Id == 0 ? "Add" : "Save")" />
</form>



