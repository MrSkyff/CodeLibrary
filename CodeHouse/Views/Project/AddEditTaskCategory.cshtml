@model ProjectHouse.Models.Project.TaskCategory

<form method="post">
    <div class="form-group"><label asp-for="Name"></label><input class="form-control" type="text" asp-for="Name" /></div>

    <div class="form-group"><label asp-for="Description"></label><input class="form-control" type="text" id="Description" asp-for="Description"/></div>

    <div class="form-group"><label asp-for="Position"></label><input class="form-control" type="number" asp-for="Position" /></div>
    <input type="hidden" asp-for="ProjectId"/>
    <input type="submit" value="@(Model != null ? "Save" : "Add")" />
</form>

